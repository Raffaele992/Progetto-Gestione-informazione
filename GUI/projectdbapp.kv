#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<CustLabel@Label>:
    color: 0,0,0,1

<CustButton@Button>:
    color: 0,0,0,1
    bold: True



ProjectDB:

<ProjectDB>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    author_text_input: author
    title_text_input: title
    year_from_text_input: year_from
    year_to_text_input: year_to

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: 165

        CustLabel:
            text: "Author:"
            
        TextInput:
            id: author

        CustLabel:
            text: "Title:"
            

        TextInput:
            id: title

        CustLabel:
            text: "Year:"
            

        BoxLayout:
            CustLabel
                text: "From:"
            TextInput:
                id: year_from

            CustLabel
                text: "To"
            TextInput:
                id: year_to





    BoxLayout:
        padding: 10
        spacing: 10

        CustLabel:
            text: "Look into:"
            size_hint_x: 0.1
            

        GridLayout:
            padding: 10
            spacing: 10
            cols:10
            row: 1


            CheckBox:

            CustLabel:
                text: "PhD thesis"
                
            CheckBox:

            CustLabel:
                text: "Master Thesis"
                

            CheckBox:

            CustLabel:
                text: " Book"
                

            CheckBox:

            CustLabel:
                text: " Article"
                
            CheckBox:

            CustLabel:
                text: "Incollection"

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        CustButton:
            text: "Search"
            size_hint_x: 15
            
            background_normal: "blue"
            background_color: 1, .3, .4, .85
            on_press: root.search_DB()

        CustButton:
            text: "Reset"
            size_hint_x: 15
            on_press: root.reset_search_DB()
            
            bold: True
        CustButton:
            text: "Quit"
            size_hint_x: 15
            on_press: root.quit_DB()
            
            bold: True